@model Organiser.Data.Models.Note

@{
    ViewData["Title"] = "Write Message";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
<h2>Send Message</h2>
<h3>@Model.LocationName</h3>
<hr />
<div class="text-align-center">
    <form asp-action="WriteNote">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <textarea asp-for="Content" class="form-control textBox centralised bordered"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <input name="Location" type="hidden" value="@Model.Location" />
        <div class="form-group">
            <input type="submit" value="Send Message" class="btn btn-primary" />
        </div>
    </form>
</div>


