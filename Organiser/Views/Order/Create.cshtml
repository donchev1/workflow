@model Organiser.Data.Models.Order

@{
    ViewData["Title"] = "Create Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<form asp-action="Create">
    <div class="text-align-center">

        <h2>Create New Order</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger centralised"></div>
        <div class="form-group">
            <label asp-for="OrderNumber" class="control-label centralised"></label>
            <input asp-for="OrderNumber" class="form-control centralised" />
            <span asp-validation-for="OrderNumber" class="text-danger centralised"></span>
        </div>
        <div class="form-group">
            <label asp-for="Customer" class="control-label centralised"></label>
            <input asp-for="Customer" class="form-control centralised" />
            <span asp-validation-for="Customer" class="text-danger centralised"></span>
        </div>
        <div class="form-group">
            <label asp-for="EntityType" class="control-label centralised"></label>

            <input asp-for="EntityType" class="form-control centralised" />
            <span asp-validation-for="EntityType" class="text-danger centralised"></span>
        </div>
        <div class="form-group">
            <label asp-for="EntityCount" class="control-label centralised"></label>

            <input asp-for="EntityCount" class="form-control centralised" />
            <span asp-validation-for="EntityCount" class="text-danger centralised"></span>
        </div>
        <div class="form-group">
            <br /><br />
            <input type="submit" value="Create" class="btn btn-primary" />
            <br />
        </div>
        @for (int i = 0; i < Model.DepartmentStates.Count; i++)
        {
            @Html.DropDownListFor(x => x.DepartmentStates[i], (List<SelectListItem>)TempData["Locations"], new { @class = "form-control centralised" })
        }
    </div>

</form>







